public static void main(String[] args) 
    {               
        Scanner input = new Scanner(System.in);
        System.out.println("Sayı: ");
        int sayı = input.nextInt();
        
        if(sayı % 2 == 0)
        {
            System.out.println("Cift sayı = " + sayı);
        }
        else{
            System.out.println("Tek sayı = " + sayı);
        }       
    }
